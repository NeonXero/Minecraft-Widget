<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/mainmobLayout">
    <!-- Scroll View + Radios -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_above="@+id/bottom_container">
        <LinearLayout
                android:id="@+id/mob_pref_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />
    </ScrollView>
    <!-- Bottom Section -->
    <RelativeLayout android:id="@+id/bottom_container"
                    android:layout_width="fill_parent" android:layout_height="50dip"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" android:gravity="center_horizontal"
            >
        <Button android:id="@+id/addAll" android:layout_height="50dip"
                android:layout_width="wrap_content"
                android:text="Select All" android:layout_alignParentTop="true"/>

        <Button android:id="@+id/subAll" android:layout_height="50dip"
                android:layout_width="wrap_content" android:layout_toRightOf="@+id/addAll"
                android:text="Deselect All" android:layout_alignParentTop="true"/>

        <Button android:id="@+id/doneButton" android:layout_height="50dip"
                android:layout_width="wrap_content" android:layout_toRightOf="@+id/subAll"

                android:text="Done!" android:layout_alignParentTop="true"/>
    </RelativeLayout>
</RelativeLayout>